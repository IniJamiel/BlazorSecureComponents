@using System.Reflection
<div class="@DivClass">
    <h2>
        @TitleText
    </h2>
    <form>
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example1">Email address</label>
            <input type="email" id="form2Example1" class="form-control" />
        </div>
        @foreach (var prop in Properties)
        {
            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example1">@prop</label>
                <input type="text" id="form2Example1" class="form-control" />
            </div>
        }
        

        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form2Example2">Password</label>
            <input type="password" id="form2Example2" class="form-control" />
        </div>

        <!-- Submit button -->
        <button type="button" class="btn btn-primary w-100 btn-block mb-4">Sign in</button>
    </form>
</div>
@code {
    [Parameter]
    public string DivClass { set; get; } = "";
    

    [Parameter]
    public string TitleText { set; get; } = "Register";
    
    private List<String> Properties => ObjType.GetType().GetFields().Select(a => a.Name.ToString()).ToList();

    private PropertyInfo[] PropertiesName => ObjType.GetType().GetProperties();

    [Parameter]
    public Object ObjType { set; get; }


}
