@using System.Reflection
@using System.Net.Http.Json
@using CommonModelsLib
@inject HttpClient Http
<div class="@DivClass">
    <h2>
        @TitleText
    </h2>
    <form>
        <div class="form-outline mb-4">
            <label class="form-label" for="Email">Email</label>
            <input 
                type="email" @bind="userObject.Email"
                id="Email" class="form-control" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="Username">Username</label>
            <input 
                type="text" @bind="userObject.Username"
                id="Username" class="form-control" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="Birthday">Birthday</label>
            <input 
                type="date" @bind="userObject.Birthday"
                id="Birthday" class="form-control" />
        </div>
        <div class="form-outline mb-4">
                    <label class="form-label" for="PhoneNumber">Phone Number</label>
                    <input 
                        type="password" @bind="userObject.PhoneNumber"
                        id="PhoneNumber" class="form-control" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="Password">Password</label>
            <input 
                type="password" @bind="userObject.Password"
                id="Password" class="form-control" />
        </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="PasswordConfirm">Confirm Password</label>
            <input 
                type="password" @bind="ConfirmPassword"
                id="PasswordConfirm" class="form-control" />
        </div>
        <button type="button" @onclick="Register" class="btn btn-primary w-100 btn-block mb-4">Register</button>
        <label>@hasil</label>
    </form>
</div>
@code {
    [Parameter]
    public string DivClass { set; get; } = "";

    [Parameter]
    public string TitleText { set; get; } = "Register";

    private string ConfirmPassword ="";
    string hasil;
    [Parameter]
    public UserBase  userObject { set; get; } = null!;

    private async Task Register()
    {
        userObject.Password = CommonModelsLib.Encryption.Encrypt(userObject.Password);
        var a = await Http.PostAsJsonAsync("api/Register", userObject);
        hasil = a.ToString();
    } 
}
